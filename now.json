{
  "version": 2,
  "name": "prism",
  "alias": "prismreader.app",
  "build": {
    "env": {
      "BOLTWALL_URI": "@boltwall-uri"
    }
  },
  "env": {
    "SESSION_SECRET": "@session-secret",
    "OPEN_NODE_KEY": "@open-node-key",
    "MONGODB_URI": "@my-mongodb-uri",
    "APP_PRIVATE_KEY": "@app-private-key",
    "CHAINPOINT_CORES": "@chainpoint-cores",
    "BOLTWALL_URI": "@boltwall-uri",
    "LND_TLS_CERT": "@buck-cert",
    "LND_MACAROON": "@buck-macaroon",
    "LND_SOCKET": "@buck-socket"
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/node/(.*)",
      "dest": "/api/node"
    },
    {
      "src": "/api/radiks/(.*)",
      "dest": "/api/radiks"
    },
    {
      "src": "/api/invoice(.*)",
      "dest": "/api/invoice"
    },
    {
      "src": "/api/proofs(.*)",
      "dest": "/api/proofs"
    },
    {
      "src": "/api/metadata(.*)",
      "dest": "/api/metadata"
    },
    {
      "handle": "filesystem"
    }
  ]
}
