{
  "version": 2,
  "name": "prism",
  "alias": "prismreader.app",
  "build": {
    "env": {
      "SESSION_SECRET": "@session-secret",
      "OPEN_NODE_KEY": "@open-node-key",
      "APP_PRIVATE_KEY": "@app-private-key",
      "MONGODB_URI": "@my-mongodb-uri"
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/node/(.*)",
      "dest": "/api/node"
    },
    {
      "src": "/api/radiks/(.*)",
      "dest": "/api/radiks"
    },
    {
      "src": "/api/invoice(.*)",
      "dest": "/api/invoice"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
